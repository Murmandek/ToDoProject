@model ToDoProject.Models.Employee

@{
    ViewData["Title"] = "Add a new employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Employee" method="post" enctype="multipart/form-data" asp-antiforgery="true">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control form-control-sm" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control  form-control-sm" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control form-control-sm" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position"></label>
            <input type="text" asp-for="Position" class="form-control form-control-sm" />
            <span asp-validation-for="Position"></span>
        </div>
        <!-- code for create image--->
        <div class="form-group">
            <label asp-for="Image.Name"></label>
            <input type="text" asp-for="Image.Name" class="form-control form-control-sm" />
            <span asp-validation-for="Image.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image.Avatar"></label>
            <input name="Avatar" type="file" asp-for="Image.Avatar" class="form-control form-control-sm" />
            <span asp-validation-for="Image.Avatar"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Employee" asp-action="Index">Back to main menu</a>
</div>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}