@model ToDoProject.Models.Employee
@{
    ViewData["Title"] = "Edit employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>


<form asp-action="Edit" asp-controller="Employee" method="post" enctype="multipart/form-data">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" />
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" />
        </div>
        <div class="form-group">
            <label asp-for="Position"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" />
        </div>
        <!-- code for create image--->
        <input type="hidden" asp-for="Image.Id" />
        <div class="form-group">
            <label asp-for="Image.Name"></label>
            <input type="text" asp-for="Image.Name" class="form-control form-control-sm" />
            <span asp-validation-for="Image.Name" />
        </div>
        <div class="form-group">
            <label asp-for="Image.Avatar"></label>
            <input type="file" asp-for="Image.Avatar" value="" class="form-control form-control-sm" />
        </div>
        <input type="hidden" asp-for="Image.EmployeeId" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to main menu</a>
</div>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}