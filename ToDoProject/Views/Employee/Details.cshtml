@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ToDoProject.Models.Employee
@{
    ViewData["Title"] = @Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>

<style>
    img {
        width: 150px;
        height: 150px;
        vertical-align: middle;
        border: 0;
        border-radius: 50%;
    }
</style>

<form asp-action="Details" asp-controller="Employee">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="Name" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Age" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="Age" value="@Model.Age">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="Address" value="@Model.Address">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Position" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="Position" value="@Model.Position">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Image.Avatar" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Image.Avatar))" />  @*style='width: 150px; height: 150px; object-fit: contain; border-radius: 75px;'*@
        </div>
    </div>
</form>

<div>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">@Localizer["Back"]</a>
</div>