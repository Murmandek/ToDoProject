@model ToDoProject.Models.Task
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Details" asp-controller="Tasks">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" readonly class="form-control-plaintext" id="Name" value="@Model.Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="Description" readonly class="form-control-plaintext" id="Description" value="@Model.Description">
        </div>
    </div>
</form>

<div>
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-primary">Back to main page</a>
</div>