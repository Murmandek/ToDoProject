@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model ToDoProject.Models.EmployeeTask
@{
    ViewData["Title"] = @Localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Model.Employee.Name
        </dd>

        <dt>Task name</dt>
        <dd>
            @Model.Task.Name
        </dd>

        <dt>Description</dt>
        <dd>
            @Model.Task.Description
        </dd>
    </dl>

    <div>
        <form asp-controller="EmployeeTask" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>
        </form>
    </div>

    <div>
        <a asp-controller="EmployeeTask" asp-action="Index" class="btn btn-secondary">Back to main menu</a>
    </div>
</div>