@model ToDoProject.Models.Person

@{
    ViewData["Title"] = "A new user";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<style>
    span {
        color: red; /* Цвет текста */
    }
</style>*@

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Account" method="post" asp-antiforgery="true">
    <div>
        <div class="validation" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Login"></label>
            <input asp-for="Login" class="form-control form-control-sm" placeholder="name@example.com"/> 
            <span asp-validation-for="Login"></span>
            @*@Html.ValidationMessageFor(model => model.Login)*@
        </div>
        <div class="form-group">
            <span id="errorName"></span>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control  form-control-sm" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
    <div>
        <button type="button" class="btn btn-primary" onclick=' location.href="/Account/Index"'>Back to main page</button>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}